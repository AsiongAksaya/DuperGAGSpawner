-- [LOADING SCREEN PART]
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")

-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui", CoreGui)
ScreenGui.Name = "FakeLoadingTradeStealer"

-- Background Frame
local Background = Instance.new("Frame", ScreenGui)
Background.Size = UDim2.new(1, 0, 1, 0)
Background.BackgroundColor3 = Color3.fromRGB(20, 20, 20)

-- Loading Text
local LoadingText = Instance.new("TextLabel", Background)
LoadingText.Size = UDim2.new(0, 200, 0, 50)
LoadingText.Position = UDim2.new(0.5, -100, 0.4, 0)
LoadingText.Text = "Loading..."
LoadingText.TextColor3 = Color3.fromRGB(255, 255, 255)
LoadingText.TextSize = 28
LoadingText.Font = Enum.Font.SourceSansBold
LoadingText.BackgroundTransparency = 1

-- Progress Bar Background
local ProgressBarBG = Instance.new("Frame", Background)
ProgressBarBG.Size = UDim2.new(0, 300, 0, 20)
ProgressBarBG.Position = UDim2.new(0.5, -150, 0.5, 0)
ProgressBarBG.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
ProgressBarBG.BorderSizePixel = 0

-- Progress Bar Fill
local ProgressBarFill = Instance.new("Frame", ProgressBarBG)
ProgressBarFill.Size = UDim2.new(0, 0, 1, 0)
ProgressBarFill.BackgroundColor3 = Color3.fromRGB(0, 200, 0)
ProgressBarFill.BorderSizePixel = 0

-- Animate Loading Progress
spawn(function()
    for i = 1, 100 do
        ProgressBarFill:TweenSize(UDim2.new(i / 100, 0, 1, 0), "Out", "Quad", 0.05, true)
        LoadingText.Text = "Loading... " .. i .. "%"
        wait(0.05)
    end
end)

-- Wait for Animation to Complete
wait(5)

-- Remove Loading Screen
ScreenGui:ClearAllChildren()

-- [TRADE STEALER FAKE GUI PART]
local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.BorderSizePixel = 0

local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 50)
Title.Text = "Roblox Trade Stealer"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextSize = 28
Title.Font = Enum.Font.SourceSansBold
Title.BackgroundTransparency = 1

local ItemBox = Instance.new("TextBox", MainFrame)
ItemBox.Size = UDim2.new(0.8, 0, 0, 40)
ItemBox.Position = UDim2.new(0.1, 0, 0.25, 0)
ItemBox.PlaceholderText = "Enter Item Name"
ItemBox.Text = ""
ItemBox.TextSize = 20
ItemBox.Font = Enum.Font.SourceSans
ItemBox.TextColor3 = Color3.fromRGB(255, 255, 255)
ItemBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local UsernameBox = Instance.new("TextBox", MainFrame)
UsernameBox.Size = UDim2.new(0.8, 0, 0, 40)
UsernameBox.Position = UDim2.new(0.1, 0, 0.45, 0)
UsernameBox.PlaceholderText = "Target Username"
UsernameBox.Text = ""
UsernameBox.TextSize = 20
UsernameBox.Font = Enum.Font.SourceSans
UsernameBox.TextColor3 = Color3.fromRGB(255, 255, 255)
UsernameBox.BackgroundColor3 = Color3.fromRGB(50, 50, 50)

local StealButton = Instance.new("TextButton", MainFrame)
StealButton.Size = UDim2.new(0.6, 0, 0, 40)
StealButton.Position = UDim2.new(0.2, 0, 0.7, 0)
StealButton.Text = "Steal Trade"
StealButton.TextSize = 22
StealButton.Font = Enum.Font.SourceSansBold
StealButton.TextColor3 = Color3.fromRGB(255, 255, 255)
StealButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)

local Status = Instance.new("TextLabel", MainFrame)
Status.Size = UDim2.new(1, 0, 0, 30)
Status.Position = UDim2.new(0, 0, 0.88, 0)
Status.Text = ""
Status.TextColor3 = Color3.fromRGB(255, 255, 255)
Status.TextSize = 18
Status.Font = Enum.Font.SourceSansItalic
Status.BackgroundTransparency = 1

-- Fake Trade Steal Process
StealButton.MouseButton1Click:Connect(function()
    if ItemBox.Text == "" or UsernameBox.Text == "" then
        Status.Text = "Please fill in all fields!"
        Status.TextColor3 = Color3.fromRGB(255, 0, 0)
        return
    end

    StealButton.Text = "Processing..."
    StealButton.BackgroundColor3 = Color3.fromRGB(255, 170, 0)
    Status.Text = "Attempting to Steal Trade..."
    Status.TextColor3 = Color3.fromRGB(255, 255, 0)

    wait(3)

    Status.Text = "Trade Steal Successful! Item: " .. ItemBox.Text
    Status.TextColor3 = Color3.fromRGB(0, 255, 0)
    StealButton.Text = "Success"
    StealButton.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
end)
